# AI Internal Manager Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Core Settings
# =============================================================================
DEBUG=false
ENVIRONMENT=development

# =============================================================================
# Database
# =============================================================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_manager

# =============================================================================
# Redis
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Neo4j
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password123

# =============================================================================
# Qdrant
# =============================================================================
QDRANT_HOST=localhost
QDRANT_PORT=6333

# =============================================================================
# LLM Provider Configuration
# =============================================================================
# Choose provider: "anthropic" or "keywords_ai"
LLM_PROVIDER=keywords_ai

# Keywords AI (Recommended - OpenAI-compatible proxy with 250+ LLMs)
# Get your API key at https://www.keywordsai.co
KEYWORDS_AI_API_KEY=your-keywords-ai-api-key
KEYWORDS_AI_BASE_URL=https://api.keywordsai.co/api/
KEYWORDS_AI_DEFAULT_MODEL=gpt-4o

# Anthropic (Alternative - direct API)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_FAST_MODEL=claude-3-5-haiku-20241022

# =============================================================================
# Embeddings (Choose one)
# =============================================================================
# Option 1: Voyage AI (recommended)
EMBEDDING_PROVIDER=voyage
VOYAGE_API_KEY=your-voyage-api-key

# Option 2: OpenAI
# EMBEDDING_PROVIDER=openai
# OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# Voice (Optional - for voice onboarding)
# =============================================================================
DEEPGRAM_API_KEY=your-deepgram-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =============================================================================
# External Services (Optional - for MCP connectors)
# =============================================================================

# Jira
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_EMAIL=your-email@company.com

# GitHub
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_ORG=your-organization

# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_APP_TOKEN=xapp-your-slack-app-token

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# =============================================================================
# Celery
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# Observability (Optional)
# =============================================================================
LOG_LEVEL=INFO
ENABLE_TRACING=false
OTLP_ENDPOINT=http://localhost:4317
